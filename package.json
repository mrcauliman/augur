{
  "name": "digital-ledger",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "pnpm -C apps/api dev",
    "vault:init": "pnpm -C apps/api vault:init",
    "snapshot": "pnpm -C apps/api snapshot",
    "monthly": "pnpm -C apps/api monthly",
    "export:public": "bash ./scripts/export_public.sh",
    "publish:public": "pnpm monthly $(date -u +%Y-%m) && pnpm export:public $(date -u +%Y-%m)"
  }
}
